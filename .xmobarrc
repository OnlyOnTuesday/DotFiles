Config {
  font = "-*-Fixed-Bold-R-Normal-*-13-*-*-*-*-*-*-*"
  , borderColor = "black"
  , border = TopB
  , bgColor = "black"
  , fgColor = "green"
  , position = TopW L 100
  , overrideRedirect = True
  , lowerOnStart = True
  , hideOnStart = False
  , commands = [ Run Com "uname" ["-sr"] "" 0
	       , Run Com "/home/User1/Bash/xmonadInit/getVolume.sh" [] "getVolume" 50
	       , Run Com "/home/User1/Bash/xmonadInit/getConnection.sh" [] "getConnection" 50
	       , Run Com "/home/User1/Bash/xmonadInit/getBrightness.sh" [] "getBrightness" 50
	       , Run Battery [ "--template" , "Batt: <acstatus>"
                             , "--Low"      , "10"        
                             , "--High"     , "80"        
                             , "--low"      , "darkred"
                             , "--normal"   , "green"
                             , "--high"     , "green"

                             , "--" 
                                       , "-o"	, "<left>% (<timeleft>)"
                                       , "-O"	, "<fc=#dAA520>Charging</fc>"
                                       , "-i"	, "<fc=#006000>Charged</fc>"
                             ] 50
	       ,Run Com "date" ["+%_I:%M%p"] "" 600
	       ,Run StdinReader ]
  , sepChar = "%"
  , alignSep = "}{"
  , template = "%uname% | %StdinReader% }{ %getBrightness% | %getVolume% | %getConnection% | %battery% | %date% "

}
